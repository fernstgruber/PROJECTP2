@Article{Brevik2015,
  Title                    = {The Use of Soil Surveys to Aid in Geologic Mapping with an Emphasis on the Eastern and Midwestern United States},
  Author                   = {Brevik, Eric C. and Miller, Bradley A.},
  Journal                  = {Soil Horizons},
  Year                     = {2015},
  Number                   = {4},
  Volume                   = {56},

  Abstract                 = {The first soil maps were made by geologists, and many early soil maps were surficial geology maps. After soil science became established as a scientific discipline, there has been a continued interplay between geologists and soil scientists, both fields benefiting from advancements made by the other. In the 1940s and 1950s, researchers began to use soil information and soil maps to assist in the improvement or construction of various types of geologic maps. There is strong agreement between preliminary geology maps created from soil maps and traditional geology maps. This is primarily due to the influence of parent material on soil formation and may also be due in part to the importance placed on parent material in some soil classification systems. Despite the results obtained when using soil maps to create surficial geology maps, there is a need for more quantitative studies to assess the degree of compliment between soil-based maps and traditional geology maps, expansion of the technique into a wider range of geologic and climatic environments, and more research in locations that use classification systems other than US soil taxonomy.},
  Address                  = {Madison, WI},
  Doi                      = {10.2136/sh15-01-0001},
  Owner                    = {fabs},
  Publisher                = {The American Society of Agronomy, Inc.},
  Timestamp                = {2017.03.31},
  Url                      = {http://dx.doi.org/10.2136/sh15-01-0001}
}

