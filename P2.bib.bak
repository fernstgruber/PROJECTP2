@Article{Thalheimer2006,
  Title                    = {{Kartierung der landwirtschaftlich genutzten B\"oden des \"{U}beretsch in S\"{u}dtirol (Italien)}},
  Author                   = {Martin Thalheimer},
  Journal                  = {Laimburg Journal},
  Year                     = {2006},
  Number                   = {1},
  Pages                    = {135-177},
  Volume                   = {3},

  Abstract                 = {The Überetsch/Oltradige region south of Bolzano (South Tyrol, Italy) is one of the most typical wine-growing areas in South Tyrol. From a geological point of view it is a very heterogeneous area due to various glacial and post-glacial deposits. In the eastern part of the area morenic deposits constitute the main geological substrate, whereas in the western part calcareous debris is the prevailing substrate for soil formation. To a lesser extent soils have developed also on lacustric sediments and fluvial gravels. These differing geological and geomorphological conditions have led to the formation of numerous different and often contrasting soil types. A detailed and systematic survey of the soils in the Überetsch/Oltradige region has been conducted in the years from 1993 to 1995 on a total area of about 2500 ha. The various soil types have been classified according to Soil Taxonomy with the description of 18 different soil series. The ‘Girlan’ series constitutes the prevailing soil type in the surveyed area. This series is located on the morenic deposits in the eastern part of the Überetsch/Oltradige and is characterised by advanced stages of pedogenesis which has led to the decalcification and acidification of the soils. The predominant textural class of the ‘Girlan’ series is sandy loam. In the depressions between the morenic hills colluvial soils of the ‘Lamm’ series are frequently interspersed. The ‘Lamm’ series is characterised by greater soil depth, less rock fragments and higher contents of organic matter and clay. The second largest soil series is the ‘St. Valentin’ series which is located on calcareous debris of the slopes along the Mendel/Mendola mountain. This series shows medium to high contents of coarse fragments, considerable amounts of calcium carbonate in the fine earth and a loamy to sandy-loamy texture. The ‘Kreuzstein’ series is located on the same substrate but differs from the previous series due to its higher contents of organic matter and clay and its lower level of calcium carbonate. Below the ‘St. Valentin’ series, on the slighter slopes at the bottom of the alluvial fans, frequently soils of the ‘Maria Rast’ series can be found. This series consists of deep soils with few coarse fragments and higher clay contents. On the fluvial gravels, which are present on the steep slopes of some valley incisions, soils of the ‘Karthein’ series prevail, typically with high contents of sand and coarse fragments and with calcium carbonate in the fine earth. On limnic sediments two soil series have been described, the ‘Paulsner Feld’ and the ‘Unterrain’ series. The soils of the ‘Paulsner Feld’ series, located on flat or slightly sloping areas, are deeply weathered, whereas the soils of the ‘Unterrain’ series, present on steep slopes, have preserved the characteristics of the un- weathered parent material due to the continuous erosive loss of topsoil.},
  Keywords                 = {Soils, glacial deposits, post-glacial deposits, vineyards, South Tyrol},
  Owner                    = {fabs},
  Timestamp                = {2017.06.01},
  Url                      = {http://www.laimburg.it/de/projekte-publikationen/blickpunkte.asp?news_action=300&news_image_id=828290}
}

